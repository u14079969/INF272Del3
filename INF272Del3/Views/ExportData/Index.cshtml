@model IEnumerable<INF272Del3.Models.User>
 
<ExportDataTableToExcelInMVC4.Models.ExportDataTableToExcelModel>

    @{
        ViewBag.Title = "Index";
    }
    @using (Html.BeginForm("ExportData", "ExportData", FormMethod.Post))
    {

        <p style="background-color: red; color: white; font-size: 20pt; font-weight: bold; padding: 10px; text-align: center;">
            Export DataTable To Excel In MVC 4
        </p>
        <table style="background-color: white; width: 100%;">
            <tr>
                <th>
                    Firstname
                </th>
                <th>
                    Lastname
                </th>
                <th>
                    Email Adress
                </th>
                <th>
                    Cellphone Number
                </th>
                <th>
                    Date Added
                </th>
                <th>
                    Username
                </th>
                <th>
                    Password
                </th>
                <th>
                    Remaining Points
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GUID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GUIDExpiry)
                </th>
                <th>
                    Gender
                </th>
                <th>
                    Profile Status
                </th>
                <th>
                    User Rights
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserSurname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserEmail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserPhone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserAdded)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UN)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PW)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserPoints)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GUID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GUIDExpiry)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gender.Gender1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status.UserStatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserType.UserType1)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.UserID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.UserID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.UserID })
                    </td>
                </tr>
            }

                  
        </table>
        <input type="submit" name="btnExportLicensing" style="width: 140px;"
               value="Export" id="exportLicensing" class="button" />
    }
